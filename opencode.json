{
  "$schema": "https://opencode.ai/config.json",
  "permission": "allow",
  "server": {
    "port": 4096,
    "hostname": "127.0.0.1"
  },
  "provider": {
    "anthropic": {
      "npm": "@ai-sdk/anthropic",
      "name": "Anthropic (Claude)",
      "options": {
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      },
      "models": {
        "claude-sonnet-4-20250514": {
          "name": "Claude Sonnet 4 (Latest)"
        },
        "claude-3-5-haiku-20241022": {
          "name": "Claude 3.5 Haiku (Fast)"
        }
      }
    },
    "dgx-spark": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "DGX Spark (Local)",
      "options": {
        "baseURL": "http://localhost:8080/v1"
      },
      "models": {
        "kimi-dev-72b": {
          "name": "Kimi-Dev-72B (Agentic Coding - 131K context, SWE-bench 60.4%)"
        },
        "glm-4.7": {
          "name": "GLM 4.7 (131K context, SWE-bench 73.8%)"
        },
        "llama-3.3-70b": {
          "name": "Llama 3.3 70B Instruct"
        },
        "llama-3.1-8b": {
          "name": "Llama 3.1 8B Instruct"
        },
        "deepseek-r1": {
          "name": "DeepSeek R1"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (Local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen-coder": {
          "name": "Qwen 2.5 Coder 32B"
        },
        "llama3": {
          "name": "Llama 3.2"
        },
        "codellama": {
          "name": "Code Llama 34B"
        }
      }
    }
  }
}
