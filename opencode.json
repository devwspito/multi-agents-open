{
  "$schema": "https://opencode.ai/config.json",
  "permission": "allow",
  "provider": {
    "dgx-spark": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "DGX Spark (Local)",
      "options": {
        "baseURL": "http://localhost:8080/v1"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM 4.7 (Primary - 131K context, SWE-bench 73.8%)"
        },
        "llama-3.3-70b": {
          "name": "Llama 3.3 70B Instruct"
        },
        "llama-3.1-8b": {
          "name": "Llama 3.1 8B Instruct"
        },
        "deepseek-r1": {
          "name": "DeepSeek R1"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (Local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen-coder": {
          "name": "Qwen 2.5 Coder 32B"
        },
        "llama3": {
          "name": "Llama 3.2"
        },
        "codellama": {
          "name": "Code Llama 34B"
        }
      }
    }
  },
  "agents": {
    "analyst": {
      "name": "Code Analyst",
      "model": "dgx-spark/glm-4.7",
      "systemPrompt": "You are a code analyst agent. Analyze tasks and codebases thoroughly.",
      "tools": ["read", "glob", "grep"]
    },
    "developer": {
      "name": "Developer",
      "model": "dgx-spark/glm-4.7",
      "systemPrompt": "You are a senior software developer agent. Implement code changes efficiently.",
      "tools": ["read", "write", "edit", "bash", "glob", "grep"]
    },
    "reviewer": {
      "name": "Code Reviewer",
      "model": "dgx-spark/glm-4.7",
      "systemPrompt": "You are a code reviewer. Review changes for quality, security, and best practices.",
      "tools": ["read", "glob", "grep"]
    }
  },
  "mcp": {
    "servers": {}
  }
}
