# =============================================================================
# OPEN MULTI-AGENTS CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATA_DIR=./data
SQLITE_PATH=./data/app.db

# =============================================================================
# PROVIDER CONFIGURATION (Choose your LLM provider)
# =============================================================================

# DGX Spark (Local inference - primary)
DGX_SPARK_ENABLED=true
DGX_SPARK_HOST=http://localhost:8000
DGX_SPARK_MODEL=llama-3.3-70b

# Ollama (Local inference - fallback/development)
OLLAMA_ENABLED=false
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# TRAINING DATA EXPORT (for ML model training on DGX)
# =============================================================================

TRAINING_EXPORT_PATH=./data/training
TRAINING_EXPORT_FORMAT=jsonl

# =============================================================================
# GITHUB OAUTH (for user authentication)
# =============================================================================

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_TOKEN=ghp_...

# =============================================================================
# JWT (for API authentication)
# =============================================================================

JWT_SECRET=change-this-in-production-use-random-string

# =============================================================================
# FRONTEND
# =============================================================================

FRONTEND_URL=http://localhost:5173

# =============================================================================
# OPENCODE
# =============================================================================

OPENCODE_URL=http://localhost:4096
OPENCODE_DIRECTORY=

# =============================================================================
# WORKSPACES
# =============================================================================

WORKSPACES_DIR=/tmp/workspaces

# =============================================================================
# SENTINENTAL (ML Training Webhook)
# =============================================================================

SENTINENTAL_URL=http://localhost:8080
SENTINENTAL_API_KEY=
