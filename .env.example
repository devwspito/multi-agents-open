# =============================================================================
# OPEN MULTI-AGENTS CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATA_DIR=./data
SQLITE_PATH=./data/app.db

# =============================================================================
# PROVIDER CONFIGURATION (Choose your LLM provider)
# =============================================================================

# DGX Spark (Local inference - primary)
DGX_SPARK_ENABLED=true
DGX_SPARK_HOST=http://localhost:8000
DGX_SPARK_MODEL=llama-3.3-70b

# Ollama (Local inference - fallback/development)
OLLAMA_ENABLED=false
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# TRAINING DATA EXPORT (for ML model training on DGX)
# =============================================================================

TRAINING_EXPORT_PATH=./data/training
TRAINING_EXPORT_FORMAT=jsonl

# =============================================================================
# GITHUB (optional - for repository operations)
# =============================================================================

GITHUB_TOKEN=ghp_...
